<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/textcolor</item>
        <item name="colorPrimary">@color/backcolor</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/backcolor</item>
        <item name="android:weekNumberColor">@color/backcolor</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/caesar_dressing</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/backcolor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/faster_one</item>
    </style>
</resources>
