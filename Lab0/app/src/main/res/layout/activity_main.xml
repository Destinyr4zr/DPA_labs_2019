<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="102dp"
            android:layout_height="29dp"
            android:text="ЗДАРОВА МИР"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.529"
            android:clickable="true"/>
    <Button
            android:text="кнопка на"
            android:layout_width="49dp"
            android:layout_height="123dp"
            android:id="@+id/MAINbutton"
            android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="181dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="181dp" android:layout_marginTop="134dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"
            style="@android:style/Widget.Holo.Button"/>
    <Button
            android:text="исходный код"
            android:layout_width="233dp"
            android:layout_height="0dp"
            android:id="@+id/button2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="89dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="33dp"
            android:layout_marginBottom="290dp" app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="89dp"
            style="@android:style/Widget.Button.Inset"/>
    <ImageView
            android:layout_width="301dp"
            android:layout_height="233dp" app:srcCompat="@mipmap/ic_launcher_foreground"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="55dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="55dp" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"/>

</android.support.constraint.ConstraintLayout>